{
  "env": {
    "browser": true,
    "node": true
  },

  "globals": {
    "cordova": true
  },

  "rules": {
    "camelcase": 2,
    "curly": 2,
    "brace-style": [2, "1tbs"],
    "quotes": [2, "single"],
    "semi": [2, "always"],
    "object-curly-spacing": [2, "never"],
    "space-infix-ops": 2
  }
}
